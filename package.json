{
  "name": "foodmanager-backend",
  "description": "Backend for the Foodmanager app",
  "version": "0.0.0",
  "homepage": "",
  "private": true,
  "keywords": [
    "feathers"
  ],
  "author": {
    "email": "m.garat@outlook.com",
    "name": "Manuel Garat"
  },
  "contributors": [],
  "bugs": {},
  "engines": {
    "node": ">= 20.18.1"
  },
  "feathers": {
    "language": "ts",
    "packager": "npm",
    "database": "postgresql",
    "framework": "koa",
    "transports": [
      "rest"
    ],
    "schema": "typebox"
  },
  "directories": {
    "lib": "src",
    "test": "test"
  },
  "main": "lib/index",
  "scripts": {
    "dev": "nodemon -x ts-node src/index.ts",
    "compile": "shx rm -rf lib/ && tsc",
    "start": "node lib/",
    "prettier": "npx prettier \"**/*.ts\" --write",
    "mocha": "cross-env NODE_ENV=test mocha test/ --require ts-node/register --recursive --extension .ts --exit",
    "test": "cross-env NODE_ENV=test npm run migrate && npm run mocha",
    "bundle:client": "npm run compile && npm pack --pack-destination ./public",
    "migrate": "knex migrate:latest",
    "migrate:make": "knex migrate:make"
  },
  "dependencies": {
    "@feathersjs/adapter-commons": "^5.0.33",
    "@feathersjs/authentication": "^5.0.33",
    "@feathersjs/authentication-client": "^5.0.33",
    "@feathersjs/configuration": "^5.0.33",
    "@feathersjs/errors": "^5.0.33",
    "@feathersjs/feathers": "^5.0.33",
    "@feathersjs/knex": "^5.0.33",
    "@feathersjs/koa": "^5.0.33",
    "@feathersjs/schema": "^5.0.33",
    "@feathersjs/transport-commons": "^5.0.33",
    "@feathersjs/typebox": "^5.0.33",
    "knex": "^3.1.0",
    "pg": "^8.14.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@feathersjs/cli": "^5.0.33",
    "@feathersjs/rest-client": "^5.0.33",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.14.0",
    "axios": "^1.8.4",
    "cross-env": "^7.0.3",
    "mocha": "^11.1.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "shx": "^0.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
